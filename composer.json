{
    "name": "app/rector-pdo-converter",
    "description": "Plugin Rector para convertir PDO a Doctrine QueryBuilder",
    "type": "project",
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "rector/rector": "^1.0",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "rector": "rector process",
        "rector-dry": "rector process --dry-run",
        "rector-debug": "rector process --dry-run --debug",
        "test": "phpunit",
        "test-select": "phpunit tests/Rector/Doctrine/SelectQueryBuilderTest.php",
        "test-insert": "phpunit tests/Rector/Doctrine/InsertQueryBuilderTest.php",
        "test-update": "phpunit tests/Rector/Doctrine/UpdateQueryBuilderTest.php",
        "test-delete": "phpunit tests/Rector/Doctrine/DeleteQueryBuilderTest.php",
        "check": [
            "@rector-dry",
            "@test"
        ],
        "check-debug": [
            "@rector-debug",
            "@test"
        ]
    }
}