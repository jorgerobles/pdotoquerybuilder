{
    "name": "jorgerobles/rector-pdo-converter",
    "description": "Plugin Rector para convertir PDO a Doctrine QueryBuilder",
    "type": "project",
    "require": {
        "php": "^7.4|^8.1"
    },
    "keywords": ["dev","static-analysis"],
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "rector/rector": "^1.0",
        "symfony/var-dumper": "^7.3"
    },
    "autoload": {
        "psr-4": {
            "JDR\\Rector\\PdoToQb\\": "PdoToQb/src",
            "JDR\\Rector\\MethodsToTraits\\": "MethodsToTraits/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JDR\\Rector\\PdoToQb\\Tests\\": "PdoToQb/tests",
            "JDR\\Rector\\MethodsToTraits\\Tests\\": "MethodsToTraits/tests"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "license": ["CC-BY-SA-2.0"],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "rector": "rector process",
        "rector-dry": "rector process --dry-run",
        "rector-debug": "rector process --dry-run --debug",
        "test": "phpunit",
        "test-pdo-select": "phpunit tests/SelectQueryBuilderTest.php",
        "test-pdo-insert": "phpunit tests/InsertQueryBuilderTest.php",
        "test-pdo-update": "phpunit tests/UpdateQueryBuilderTest.php",
        "test-pdo-delete": "phpunit tests/DeleteQueryBuilderTest.php",
        "check": [
            "@rector-dry",
            "@test"
        ],
        "check-debug": [
            "@rector-debug",
            "@test"
        ]
    }
}
